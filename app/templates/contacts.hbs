{{page-title "Contacts"}}


<table class='table'>

  <tbody>

    {{#each @model.contacts as |contact|}}

      <tr>
        <td>
          {{contact.nom}} {{contact.prenom}} {{contact.email}}
        </td>

        <td>
          <button class="bi bi-trash" class="btn btn-danger btn-sm" type="button" {{action "delete" contact}}/>
        </td>
      </tr>

    {{/each}}

  </tbody>

</table>



